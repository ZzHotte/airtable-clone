// =======================
// Prisma generator & DB
// =======================
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// NextAuth required models
// =======================
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =======================
// Core User model
// =======================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  workspaces       Workspace[]
  workspaceMembers WorkspaceMember[]
}

// =======================
// Airtable-like hierarchy
// =======================
model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  bases   Base[]
  members WorkspaceMember[]

  @@index([ownerId])
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([userId])
}

enum WorkspaceRole {
  owner
  member
}

model Base {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  dataTables DataTable[]

  @@index([workspaceId])
}

model DataTable {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  baseId String
  base   Base   @relation(fields: [baseId], references: [id], onDelete: Cascade)

  columns TableColumn[]
  rows    TableRow[]
  cells   TableCell[]
  views   TableView[]

  @@index([baseId])
}

model TableColumn {
  id      String    @id @default(cuid())
  tableId String
  table   DataTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  key        String
  name       String
  type       ColumnType
  order      Int
  isHidden   Boolean    @default(false)
  isComputed Boolean    @default(false)

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  tableCells TableCell[]

  @@unique([tableId, key])
  @@unique([tableId, name])
  @@index([tableId, order])
}

enum ColumnType {
  text
  number
}

model TableRow {
  id      String    @id @default(cuid())
  tableId String
  table   DataTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  // order: 用于排序，不保证连续
  // 初始: 1000, 2000, 3000
  // 插入: 1500
  order     BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cells TableCell[]

  @@index([tableId, order])
  @@index([tableId, createdAt])
}

model TableCell {
  id String @id @default(cuid())

  tableId String
  table   DataTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  rowId String
  row   TableRow @relation(fields: [rowId], references: [id], onDelete: Cascade)

  columnId String
  column   TableColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)

  // ✅ typed value（支持 DB-level filter/sort）
  valueText   String?
  valueNumber Float?
  valueType   ColumnType

  updatedAt DateTime @updatedAt
  // 文本 contains/search 建议用 pg trigram 或 tsvector（后面说）

  @@unique([rowId, columnId]) // ✅ 1 cell = (row, col)
  @@index([tableId, rowId])
  @@index([tableId, columnId])
  @@index([columnId, valueNumber]) // ✅ number filter/sort 性能关键
}

model TableView {
  id      String    @id @default(cuid())
  tableId String
  table   DataTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  name String

  filters Json
  sort    Json
  search  String?

  visibleColumnIds String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tableId])
}
